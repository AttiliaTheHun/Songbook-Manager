<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefWidth="650.0">
         <children>
            <Label text="Version Control System settings">
               <HBox.margin>
                  <Insets left="2.0" right="2.0" />
               </HBox.margin></Label>
            <Separator prefHeight="20.0" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets left="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <VBox prefWidth="650.0">
         <children>
            <CheckBox fx:id="remoteSaveLoadSwitch" mnemonicParsing="false" selected="true" text="Enable VCS" />
            <HBox>
               <children>
                  <Label text="Remote data">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="remoteDataURLField" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Remote index">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="remoteDataIndexURLField" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Remote version timestamp">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="remoteDataVersionTimestampField" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
             <HBox>
               <children>
                   <Label text="VCS cache">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Label>
                   <TextField fx:id="VCSCachePathField" HBox.hgrow="ALWAYS" />
                  <Button fx:id="browseVCSCachePathButton" mnemonicParsing="false" text="Browse">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin></Button>
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </HBox>
            <HBox>
               <children>
                  <Label text="VCS threads">
                     <HBox.margin>
                        <Insets right="3.0" top="3.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="VCSThreadCountField" />
               </children>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </HBox>
         </children>
         <VBox.margin>
            <Insets left="20.0" top="10.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
